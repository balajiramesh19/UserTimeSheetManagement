                    type: 'column',
                    events: {
                        load: requestData
                    },
                    credits: {
                        enabled: false
                    },
                    backgroundColor: '#32142fa1',
                    options3d: {
                        enabled: true,
                        alpha: 15,
                        beta: 15,
                        depth: 50,
                        viewDistance: 25
                    }

                },
                credits: {
                    enabled: false
                },
                title: {
                    align: 'center',
                    text: 'Employee Status Count by Month'
                },
                subtitle: {
                    align: 'left',
                    text: ''
