
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<body style="background: linear-gradient(90deg, #49274a, transparent),url(https://cdn.pixabay.com/photo/2021/07/26/21/30/clock-6495245_960_720.jpg); background-image: /* background-repeat: round; */ background-size: cover; background-size: cover;">

    <div class="row" style="padding:10px">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-clock-o fa-5x" aria-hidden="true"></i>
                        </div>
                        <div class="col-xs-9 text-right">

                            <div class="huge">@ViewBag.SubmittedTimesheetCount</div>
                            <div>Submitted Count</div>
                        </div>
                    </div>
                </div>
                <a target="_blank"
                   href="@Url.Action("SubmittedTimeSheet","AllTimeSheet")">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-check-circle fa-5x" aria-hidden="true"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.ApprovedTimesheetCount</div>
                            <div>Approved Timesheet Count</div>
                        </div>
                    </div>
                </div>
                <a target="_blank"
                   href="@Url.Action("ApprovedTimeSheet","AllTimeSheet")">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-close fa-5x "></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge"> @ViewBag.RejectedTimesheetCount</div>
                                <div>Rejected Timesheet Count</div>
                            </div>
                        </div>
                    </div>
                    <a target="_blank" href="@Url.Action("RejectedTimeSheet","AllTimeSheet")">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>


</body>
